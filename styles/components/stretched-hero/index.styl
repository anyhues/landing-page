@require '../spinner'

.stretched-hero
  background-color rgb(159, 212, 193)

  min-height 100%
  width 100%
  height 100%

  position relative
  overflow hidden

  &:before
    @extend .spinner
    content ''
    display block
    position absolute

    top 50%
    left 50%
    transform translateX(-50%)

  .central-teaser
    position absolute
    top 30%
    left 50%
    transform translate(-50%, -50%)
    width 90%
    text-align center
    color #fff

    h1
      font-family modern_sansregular, 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-size 2rem
      letter-spacing .3rem

    p.sub_headline
      background-color rgba(37, 37, 37, 0.66)


  img
    min-height 100%
    min-width 100%
    height auto
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
