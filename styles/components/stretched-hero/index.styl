.stretched-hero
  background-color rgb(159, 212, 193)
  // background-size cover
  // background-position center bottom

  /* Set rules to fill background */
  min-height 100%
  width: 100%;
  height: 100%;

  position relative
  overflow hidden

  .central-teaser
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

  img
    min-height 100%
    min-width 100%
    height auto
    position absolute
    top 0
    left 50%
    transform translate(-50%)
