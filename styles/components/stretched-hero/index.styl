@require '../spinner'
.overlay
  background-color rgba(94, 78, 44, 0.36)
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 999

.stretched-hero
  background-color rgb(159, 212, 193)

  min-height 100%
  width 100%
  height 100%

  position relative
  overflow hidden

  &:before
    @extend .spinner
    content ''
    display block
    position absolute

    top 50%
    left 50%
    transform translateX(-50%)

  .central-teaser
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 90%
    color #fff
    z-index 1000

    h1
      text-align center
      font-family modern_sansregular, 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-size 4rem
      letter-spacing .3rem

    p.sub-title
      margin-top 2rem
      font-family JaapokkiRegular, 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-size 2rem
      text-align center
      // background-color rgba(37, 37, 37, 0.66)

  img
    min-height 100%
    min-width 100%
    height auto
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
